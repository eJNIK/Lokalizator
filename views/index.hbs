<div id="map"></div>



<script>
    function initMap() {
        var lat = {{lat}};
        var lng = {{lng}};
        var uluru = {lat: lat, lng: lng};
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 17,
            center: uluru
        });
        var marker = new google.maps.Marker({
            position: uluru,
            map: map
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzmM0iFRerjj8H8SjK_N0cgLnrPqsMzYQ&callback=initMap">
